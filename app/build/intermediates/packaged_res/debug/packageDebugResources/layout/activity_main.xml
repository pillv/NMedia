<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activiti.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/buttomBarrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".activiti.MainActivity"
        tools:listitem="@layout/card_post" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/transparent"
        app:constraint_referenced_ids="ico_edit, edit_message, text_post, cancel_edit, buttomEditBarrier, background" />


    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/buttomEditBarrier"
        app:layout_constraintBottom_toBottomOf="@id/buttomBarrier"
        tools:ignore="MissingConstraints"
        android:background="?attr/colorSurface"/>

    <ImageView
        android:id="@+id/ico_edit"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:layout_marginBottom="@dimen/common_spacing"
        android:contentDescription="@string/edit_text_avatar"
        app:layout_constraintBottom_toTopOf="@id/buttomBarrier"
        app:layout_constraintStart_toStartOf="@id/list"
        app:layout_constraintBaseline_toTopOf="parent"
        android:src="@drawable/baseline_create_24"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/edit_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"
        app:layout_constraintBottom_toTopOf="@+id/text_post"
        app:layout_constraintEnd_toStartOf="@id/cancel_edit"
        app:layout_constraintStart_toEndOf="@+id/ico_edit"
        app:layout_constraintTop_toTopOf="@id/ico_edit"
        app:layout_constraintVertical_chainStyle="packed"
        android:text="@string/description_edit_message" />

    <TextView
        android:id="@+id/text_post"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"
        android:layout_marginBottom="@dimen/common_spacing"
        app:layout_constraintBottom_toTopOf="@id/buttomBarrier"
        app:layout_constraintEnd_toStartOf="@id/cancel_edit"
        app:layout_constraintStart_toEndOf="@+id/ico_edit"
        app:layout_constraintTop_toBottomOf="@id/edit_message"
        android:text="@sample/posts.json/data/content"
        android:contentDescription="@string/edit_text_post"/>

    <ImageView
        android:id="@+id/cancel_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_spacing"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_menu"
        android:src="@drawable/round_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttomEditBarrier"
        android:padding="12dp"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttomEditBarrier"
        app:barrierDirection="top"
        app:constraint_referenced_ids="ico_edit,edit_message, cancel_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/content"
        android:padding="8dp"
        android:hint="@string/post_content_hint"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        app:layout_constraintEnd_toStartOf="@id/save"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@android:color/transparent"
        />


    <ImageView
        android:id="@+id/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/outline_check_circle_24"
        android:contentDescription="@string/save_post_bottum"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttomBarrier"
        app:barrierDirection="top"
        app:constraint_referenced_ids="content,save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>